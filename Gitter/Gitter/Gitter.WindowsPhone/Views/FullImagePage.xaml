<Page
    x:Class="Gitter.Views.FullImagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding FullImage, Source={StaticResource Locator}}">

    <ScrollViewer HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Visible" 
                  VerticalAlignment="Stretch" 
                  ZoomMode="Enabled" ZoomSnapPointsType="Mandatory"
                  MinZoomFactor="0.5">
        <Grid>
            <Image Source="{Binding Path=Source}" Stretch="Uniform" />
        </Grid>
    </ScrollViewer>
    
</Page>
