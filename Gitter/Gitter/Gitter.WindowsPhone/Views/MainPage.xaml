<Page
    x:Class="Gitter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    RequestedTheme="Light"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <!-- Content -->
        <Hub Margin="0 24 0 0">
            <Hub.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="GITTER" FontSize="60" FontWeight="SemiBold"
                           CharacterSpacing="10" />
                </DataTemplate>
            </Hub.HeaderTemplate>

            <HubSection Header="rooms" 
                        HeaderTemplate="{StaticResource HeaderTemplate}">

                <DataTemplate>

                    <ListView ItemsSource="{Binding Path=Rooms}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource TextBlockButtonStyle}"
                                        Command="{Binding Main.SelectRoomCommand, Source={StaticResource Locator}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Margin="0 6">
                                        <TextBlock Text="{Binding Path=Name}" FontSize="24" />
                                        <TextBlock Text="{Binding Path=Topic}" FontSize="10"
                                                   Visibility="{Binding Path=Topic, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </DataTemplate>

            </HubSection>

            <HubSection Header="chat" 
                        HeaderTemplate="{StaticResource HeaderTemplate}">

                <DataTemplate>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        
                        <TextBlock FontSize="26">
                            <Run Text="room" />
                            <Run Text="{Binding Path=SelectedRoom.Name}" />
                        </TextBlock>

                        <ListView Grid.Row="1" ItemsSource="{Binding Path=Messages}">
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                    </Grid>
                    
                </DataTemplate>

            </HubSection>
        </Hub>
    </Grid>

</Page>